{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "allowJs": false,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
